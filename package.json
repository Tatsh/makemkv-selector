{
  "contributors": ["Andrew Udvare <audvare@gmail.com>"],
  "cspell": {
    "cache": {
      "useCache": true
    },
    "dictionaryDefinitions": [
      {
        "name": "main",
        "path": ".vscode/dictionary.txt"
      }
    ],
    "enableFileTypes": {
      "*": true
    },
    "enableGlobDot": true,
    "files": ["*"],
    "ignorePaths": [
      "*.1",
      "*.har",
      "*.min.js",
      "*.lock",
      ".git/**",
      ".yarn/**/*.cjs",
      ".vscode/extensions.json",
      "dist/**",
      "man/**"
    ],
    "language": "en-GB",
    "languageSettings": [
      {
        "dictionaries": ["main"],
        "languageId": "*"
      }
    ],
    "useGitignore": true
  },
  "description": "Translate a MakeMKV track selection string to plain English.",
  "devDependencies": {
    "@prettier/plugin-xml": "^3.4.2",
    "cspell": "^9.7.0",
    "elm": "^0.19.1-6",
    "markdownlint-cli2": "^0.21.0",
    "prettier": "^3.8.1",
    "prettier-plugin-ini": "^1.3.0",
    "prettier-plugin-sort-json": "^4.2.0",
    "prettier-plugin-toml": "^2.0.6"
  },
  "files": ["LICENSE.txt", "README.md", "dist/**/*.js"],
  "homepage": "https://tatsh.github.io/makemkv-selection-translator/",
  "keywords": ["elm", "makemkv", "utility", "web-app"],
  "license": "MIT",
  "main": "index.js",
  "markdownlint-cli2": {
    "config": {
      "MD024": {
        "siblings_only": true
      },
      "MD033": {
        "allowed_elements": ["kbd"]
      },
      "default": true,
      "line-length": {
        "code_blocks": false,
        "line_length": 100,
        "tables": false
      }
    },
    "gitignore": true,
    "globs": ["**/*.md", "**/*.mdc"],
    "noBanner": true,
    "showFound": true
  },
  "name": "makemkv-selection-translator",
  "packageManager": "yarn@4.12.0",
  "prettier": {
    "endOfLine": "lf",
    "iniSpaceAroundEquals": true,
    "jsonRecursiveSort": true,
    "overrides": [
      {
        "files": ["package.json"],
        "options": {
          "parser": "json"
        }
      }
    ],
    "plugins": [
      "@prettier/plugin-xml",
      "prettier-plugin-ini",
      "prettier-plugin-sort-json",
      "prettier-plugin-toml"
    ],
    "printWidth": 100,
    "reorderKeys": true,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Tatsh/makemkv-selection-translator.git"
  },
  "scripts": {
    "build": "elm make src/Main.elm --output=main.js",
    "build:ci": "elm make src/Main.elm --output=main.js --optimize",
    "check-formatting": "yarn prettier -c . && yarn markdownlint-cli2",
    "check-spelling": "yarn cspell --no-progress './**/*'  './**/.*'",
    "format": "prettier -w . && yarn markdownlint-cli2 --fix",
    "qa": "yarn eslint && yarn check-spelling && yarn check-formatting",
    "reactor": "elm reactor",
    "start": "npm run build && npx serve"
  },
  "version": "0.0.2"
}
